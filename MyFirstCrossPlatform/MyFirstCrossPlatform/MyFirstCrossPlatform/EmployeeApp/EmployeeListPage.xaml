<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyFirstCrossPlatform.EmployeeApp.EmployeeListPage">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Add Employee"  Order="Default" Clicked="Toolbar_Clicked"/>
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        
        <StackLayout BackgroundColor="#34495e">
            
          
            <Frame VerticalOptions="FillAndExpand">
                <StackLayout BackgroundColor="White" VerticalOptions="FillAndExpand">
                    <ListView x:Name="EmployeeList" HorizontalOptions="FillAndExpand" VerticalOptions="Center" ItemSelected="EmployeeList_ItemSelected">
                        <ListView.ItemTemplate>
                            <DataTemplate >
                                <TextCell Text="{Binding EmployeeName}" Detail="{Binding Designation}"  Height="100"></TextCell>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </StackLayout>
            </Frame>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>